.row
  .small-24.columns.myregistration-header
    New to Readit?
    %br
    Sign Up!
.row
  .small-24.large-8.large-offset-8.columns
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      .form-field.input-container
        = f.email_field :email, :placeholder => "E-Mail", :autofocus => true
      .form-field.input-container
        = f.text_field :username, :placeholder => "Username"
      .form-field.input-container
        = f.password_field :password, :placeholder => "Password"
      .form-field.input-container
        = f.password_field :password_confirmation, :placeholder => "Confirm Password"
      %ul.button-group  
        = f.submit "Sign Up", class: "button mysign-in-button-l"
        = link_to "Sign In", new_session_path(@user), class: "button mysign-in-button-r"
        = link_to "Forgot your password?", new_user_password_path