.row
  .small-24.columns.mysign-in-header PLEASE SIGN IN
.row
  .small-24.large-8.large-offset-8.columns
    = form_for(resource, :as => resource_name,:url => session_path(resource_name)) do |f|
      .form-field.input-container
        = f.email_field :email, label: false, placeholder: "Email", :autofocus => true
      .form-field.input-container
        = f.password_field :password, label: false, placeholder: "Password"
      - if devise_mapping.rememberable?
        .mycheckbox
          = f.check_box :remember_me, label: false, class: "checkbox", checked: true
          = f.label :remember_me
      %ul.button-group  
        = f.submit "Sign In", class: "button mysign-in-button-l"
        = link_to "Sign Up", new_user_registration_path, class: "button mysign-in-button-r"
        = link_to "Forgot your password?", new_user_password_path
